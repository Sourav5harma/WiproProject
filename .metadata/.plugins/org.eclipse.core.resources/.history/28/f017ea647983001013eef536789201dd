        <div class="task-actions">
          <form method="post" action="<c:url value='/tasks/status/${t.taskId}'/>">
            <input type="hidden" name="status" value="IN_PROGRESS">
            <button class="btn btn-primary">Mark In Progress</button>
          </form>
          <form method="post" action="<c:url value='/tasks/status/${t.taskId}'/>">
            <input type="hidden" name="status" value="COMPLETED">
            <button class="btn btn-success">Mark Completed</button>
          </form>
          <a class="btn btn-link" href="<c:url value='/tasks/view/${t.slug}'/>">Open</a>
        </div>
      </div>
    </c:forEach>

